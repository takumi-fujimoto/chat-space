.chat-main
  .chat-main__group_info
    .chat-main__group_info__left_box
      .chat-main__group_info__left_box__group_name
        = @group.name
      .chat-main__group_info__left_box__group_member
        Menber: 
        - @group.users.each do |user|
          = user.name
    .chat-main__group_info__edit_btn
      = link_to "Edit", edit_group_path(@group)
  .chat-main__message
    = render @messages
  .chat-main__message_form
    .input-box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: "input-box__text", placeholder: 'type a message'
        .input-box__mask
          = f.label :image, class: "input-box__mask__image" do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: "input-box__mask__image__file"
        = f.submit 'Send', class: "submit-button",value: "Send"

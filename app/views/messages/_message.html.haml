.message{data: {message: {id: message.id}}}
  .upper-message
    .group_member
      = message.user.name
    .group_member__send_time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .member_message
    - if message.content.present?
      %p.member-message__content
        = message.content
    = image_tag message.image.url, class: 'member-message__image' if message.image.present?




